.row
  .columns
    %table.hover
      %thead
        %tr
          %th{:width => "200"} Team
          %th{width: '150'} Played
          %th{:width => "150"} Won
          %th{:width => "150"} Lost
          %th{:width => "150"} Average
      %tbody
        - @teams.each do |team|
          %tr
            %td
              = team[:name]
            %td.leaderboard-table__games-played
              = team[:played]
            %td.leaderboard-table__games-won
              = team[:won]
            %td.leaderboard-table__games-lost
              = team[:lost]
            %td.leaderboard-table__games-average
              = "#{team[:average]}%"

